@page
@model NASH1.Pages.Restaurant.KFCModel
@{
}



<body>
    <h1 class="mainResSubTiltle"></h1>
    <form method="post">
        <div class="cover">
            <div class="box">
                <div id="item-card">
                    <div id="card-top">
                    </div>
                    <img src="~/images/KFCBurger.png" width="200px" height="100px" />
                    <p id="item-name">KFC Burger</p>
                    <p id="item-price">RM9.00</p>
                    <p>(buy 3 or more to get 10% discount)</p>
                    <input type="number" min="0" asp-for="Food.KFCBurger" placeholder="KFC Burger" />
                </div>
            </div>
            <div class="box">
                <div id="item-card">
                    <img src="~/images/KFCWedges.png" width="200px" height="100px" />
                    <p id="item-name">KFC Wedges</p>
                    <p id="item-price">RM10.00</p>
                    <br />
                    <br />
                    <br />
                    <input type="number" min="0" asp-for="Food.KFCWedges" placeholder="KFC Wedges" />
                </div>
            </div>
            <div class="box">
                <div id="item-card">
                    <img src="~/images/KFCFriedChicken.png" width="200px" height="100px" />
                    <p id="item-name">KFC Chicken</p>
                    <p id="item-price">RM8.00</p>
                    <br />
                    <br />
                    <br />
                    <input type="number" min="0" asp-for="Food.KFCChicken" placeholder="KFC Chicken" />
                </div>

            </div>

            <div class="box">
                <div id="item-card">
                    <p>Please enter your information</p>
                    <ul class="form-style-1">

                        <li>
                            <label>Name </label>
                            <input type="text" class="field-long" asp-for="Info.Name" placeholder="Name" />
                        </li>
                        <li>
                            <label>Tel </label>
                            <input type="tel" class="field-long" asp-for="Info.Tel" placeholder="Tel" />
                        </li>
                        <li>
                            <label>Email </label>
                            <input type="text" class="field-long" asp-for="Info.Email" placeholder="Email" />
                        </li>
                        <li>
                            <label>Address</label>
                            <input type="text" class="field-long" asp-for="Info.Address" placeholder="Address" />

                        </li>
                    </ul>
                </div>
            </div>
            <button class="btn btn-primary mt-1" type="submit">Order</button>
        </div>



    </form>
</body>
