@page
@model NASH1.Pages.Restaurant.MCDModel
@{
}


<body>
    <h1 class="mainResSubTiltle"></h1>
    <form method="post">
        <div class="cover">
            <div class="box">
                <div id="item-card">
                    <div id="card-top">
                    </div>
                    <img src="~/images/McBurger.png" width="200px" height="100px" />
                    <p id="item-name">MCD Burger</p>
                    <p id="item-price">RM10.00</p>
                    <br />
                    <br />
                    <br />
                    <input type="number" min="0" asp-for="Food.McBurger" placeholder="MCD Burger" />

                </div>
            </div>
            <div class="box">
                <div id="item-card">
                    <img src="~/images/McFurryOreo.png" width="200px" height="100px" />
                    <p id="item-name">MCD Flurry</p>
                    <p id="item-price">RM8.00</p>
                    <br />
                    <br />
                    <br />
                    <br />
                    <input type="number" min="0" asp-for="Food.McFurryOreo" placeholder="MCD Flurry" />

                </div>
            </div>
            <div class="box">
                <div id="item-card">
                    <img src="~/images/ApplePie.png" width="200px" height="100px" />
                    <p id="item-name">MCD Apple Pie</p>
                    <p id="item-price">RM7.70</p>
                    <p>(buy 3 or more to get 15% discount)</p>
                    <br />
                    <input type="number" min="0" asp-for="Food.McApplePie" placeholder="MCD Apple Pie" />

                </div>

            </div>
            <div class="box">
                <div id="item-card">
                    <p>Please enter your information</p>
                    <ul class="form-style-1">

                        <li>
                            <label>Name </label>
                            <input type="text" class="field-long" asp-for="Info.Name" placeholder="Name" />
                        </li>
                        <li>
                            <label>Tel </label>
                            <input type="tel" class="field-long" asp-for="Info.Tel" placeholder="Tel" />
                        </li>
                        <li>
                            <label>Email </label>
                            <input type="text" class="field-long" asp-for="Info.Email" placeholder="Email" />
                        </li>
                        <li>
                            <label>Address</label>
                            <input type="text" class="field-long" asp-for="Info.Address" placeholder="Address" />

                        </li>
                    </ul>
                </div>
            </div>
            <button class="btn btn-primary mt-1" type="submit">Order</button>
        </div>

    </form>
</body>