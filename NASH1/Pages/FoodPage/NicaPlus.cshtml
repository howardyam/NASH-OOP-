@page
@model NASH1.Pages.Restaurant.NicaPlusModel
@{
}


<body>
    <h1 class="mainResSubTiltle"></h1>
    <form method="post">
        <div class="cover">
            <div class="box">
                <div id="item-card">
                    <div id="card-top">
                    </div>
                    <img src="~/images/ChocolateBingsu.png" width="200px" height="100px" />
                    <p id="item-name">Chocolate Bingsu</p>
                    <p id="item-price">RM12.30</p>
                    <br />
                    <br />

                    <input type="number" min="0" asp-for="Food.ChocolateBingsu" placeholder="ChocolateBingsu" />

                </div>
            </div>
            <div class="box">
                <div id="item-card">
                    <img src="~/images/MangoBinsu.png" width="200px" height="100px" />
                    <p id="item-name">Mango Bingsu</p>
                    <p id="item-price">RM14.30</p>
                    <p>(buy 2 or more to get 15% discount)</p>

                    <input type="number" min="0" asp-for="Food.MangoBingsu" placeholder="MangoBingsu" />

                </div>

            </div>
            <div class="box">
                <div id="item-card">
                    <p>Please enter your information</p>
                    <ul class="form-style-1">

                        <li>
                            <label>Name </label>
                            <input type="text" class="field-long" asp-for="Info.Name" placeholder="Name" />
                        </li>
                        <li>
                            <label>Tel </label>
                            <input type="tel" class="field-long" asp-for="Info.Tel" placeholder="Tel" />
                        </li>
                        <li>
                            <label>Email </label>
                            <input type="text" class="field-long" asp-for="Info.Email" placeholder="Email" />
                        </li>
                        <li>
                            <label>Address</label>
                            <input type="text" class="field-long" asp-for="Info.Address" placeholder="Address" />

                        </li>
                    </ul>
                </div>
            </div>
            <button class="btn btn-primary mt-1" type="submit">Order </button>
        </div>
    </form>
</body>




